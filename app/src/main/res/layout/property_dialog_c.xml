<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/delete_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.jksol.filemanager.Widgets.CustomTextView
                    android:id="@+id/txt_dialog_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/property"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontName="@string/font_helvetica_neue_regular" />

                <ScrollView
                    android:id="@+id/container_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_dialog_label">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/file_icon"
                                android:layout_width="@dimen/property_dialog_file_icon_size"
                                android:layout_height="@dimen/property_dialog_file_icon_size" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/file_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:text="Instagram"
                                android:textSize="@dimen/property_dialog_title_text_size"
                                app:fontName="@string/font_montserrat_regular" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_dialog_label"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/simple_border"
                            android:textSize="1dp" />


                        <!--    App Property Layout     -->
                        <LinearLayout
                            android:id="@+id/app_property_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="100">

                                <com.jksol.filemanager.Widgets.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="60"
                                    android:text="Version:" />

                                <com.jksol.filemanager.Widgets.CustomTextView
                                    android:id="@+id/versionCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="40"
                                    android:text="10.4.0.0" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="100">

                                <com.jksol.filemanager.Widgets.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="60"
                                    android:text="Size:" />

                                <com.jksol.filemanager.Widgets.CustomTextView
                                    android:id="@+id/filesize"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="40"
                                    android:text="18.9 MB" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="100">

                                <com.jksol.filemanager.Widgets.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="60"
                                    android:text="package Name:" />

                                <com.jksol.filemanager.Widgets.CustomTextView
                                    android:id="@+id/packagename"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="40"
                                    android:text="com.instagrammmmmer.com" />
                            </LinearLayout>

                        </LinearLayout>

                        <!--    Files Property Layout   -->
                        <LinearLayout
                            android:id="@+id/file_property_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/type_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="100">

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="60"
                                        android:text="Type:"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/file_type"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="40"
                                        android:text="File"
                                        android:textSize="@dimen/property_dialog_text_size" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="100">

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="60"
                                        android:text="Path:"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/file_path"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="40"
                                        android:text="/sdcard/aaaaa/"
                                        android:textSize="@dimen/property_dialog_text_size" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/copy_path_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="100">

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/copy_path"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="70"
                                        android:background="@drawable/button_shape"
                                        android:gravity="center"
                                        android:padding="@dimen/property_dialog_button_padding"
                                        android:text="Copy"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        app:fontName="@string/font_regular" />

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/copy_full_path"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="60"
                                        android:background="@drawable/button_shape"
                                        android:gravity="center"
                                        android:padding="@dimen/property_dialog_button_padding"
                                        android:text="Copy fullpath"
                                        android:textColor="@color/white"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="100">

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="60"
                                        android:text="Total Files:"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/total_file_contain"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="40"
                                        android:text="20 Folders, 4181 Files"
                                        android:textSize="@dimen/property_dialog_text_size" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="100">

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="60"
                                        android:text="size:"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/file_size"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="40"
                                        android:text="50 MB"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/more_datail_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_dialog_label"
                                    android:background="@drawable/simple_border"
                                    android:textSize="1dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:visibility="gone"
                                        android:weightSum="100">

                                        <com.jksol.filemanager.Widgets.CustomTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="60"
                                            android:text="Created:" />

                                        <com.jksol.filemanager.Widgets.CustomTextView
                                            android:id="@+id/file_created"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="40"
                                            android:text="30/01/17 11:51:52 AM" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="5dp"
                                        android:weightSum="100">

                                        <com.jksol.filemanager.Widgets.CustomTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="60"
                                            android:text="Modified:"
                                            android:textSize="@dimen/property_dialog_text_size" />

                                        <com.jksol.filemanager.Widgets.CustomTextView
                                            android:id="@+id/file_modified"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="40"
                                            android:text="30/01/17 11:51:52 AM"
                                            android:textSize="@dimen/property_dialog_text_size" />

                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_dialog_label"
                                    android:background="@drawable/simple_border"
                                    android:textSize="1dp" />

                                <LinearLayout
                                    android:id="@+id/file_permission_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="100">

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="60"
                                        android:text="Permission:"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                    <com.jksol.filemanager.Widgets.CustomTextView
                                        android:id="@+id/file_permission"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:layout_weight="40"
                                        android:text="Read Only, \n Write Only"
                                        android:textSize="@dimen/property_dialog_text_size" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/file_bottom_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorFooterBorderTop" />

                <com.jksol.filemanager.Widgets.CustomTextView
                    android:id="@+id/file_dialog_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@drawable/selector"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/cancel"
                    android:textColor="@color/colorPrimary"
                    app:fontName="@string/font_helvetica_neue_regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/multiplefile_bottom_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorFooterBorderTop" />

                <com.jksol.filemanager.Widgets.CustomTextView
                    android:id="@+id/multplefile_dialog_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:background="@drawable/selector"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/cancel"
                    android:textColor="@color/colorPrimary"
                    app:fontName="@string/font_helvetica_neue_regular" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apps_bottom_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorFooterBorderTop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="90">

                    <Button
                        android:id="@+id/dialog_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/selector"
                        android:text="@string/cancel"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorFooterBorderTop" />

                    <Button
                        android:id="@+id/dialog_uninstall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/selector"
                        android:text="@string/uninstall"
                        android:textColor="@color/brightRed" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorFooterBorderTop" />

                    <Button
                        android:id="@+id/dialog_open"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:background="@drawable/selector"
                        android:text="@string/open"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/apps_notinstalled_bottom_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorFooterBorderTop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/dialog_app_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:background="@drawable/selector"
                        android:text="@string/cancel"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorFooterBorderTop" />

                    <Button
                        android:id="@+id/dialog_install"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:background="@drawable/selector"
                        android:text="@string/install"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>

