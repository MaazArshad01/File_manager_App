<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/main_menu_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/file_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/main_icon_space"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/file_icon"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/file_default" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/file_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="Files"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/gallery_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/main_icon_space"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ic_gallry"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_gallery" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/txt_gallary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="@string/gallary"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/apps_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/main_icon_space"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ic_apps"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_apk" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/txt_apks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="Apps"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/music_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/main_icon_space"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/musiccustomize"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/music_main" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/musicfile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="@string/music"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/video_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/main_icon_space"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/videocustomize"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/video_main" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/video_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="@string/video"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/doc_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/main_icon_space"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/doccustomize"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/doc_main" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/doc_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="@string/doc"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/download_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/customize"
                                android:layout_width="@dimen/main_icon_size"
                                android:layout_height="@dimen/main_icon_size"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/download" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:id="@+id/file_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:maxLines="2"
                                android:text="Download"
                                android:textSize="14sp"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <FrameLayout
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#80cccccc">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/next" />

                </FrameLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/recent_added_pic_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main_menu_layout"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/simple_border"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:weightSum="100">

                        <com.jksol.filemanager.Widgets.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="90"
                            android:padding="5dp"
                            android:text="@string/recent_added_pics"
                            android:textSize="16sp"
                            app:fontName="@string/font_montserrat_light" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/next" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recent_added_pics_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none" />

                        <ProgressBar
                            android:id="@+id/recentImage_loader"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:indeterminate="true"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/noMediaLayout_recent_photos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:background="@drawable/ic_no_media" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:text="@string/no_media_found"
                                android:textColor="@color/color_text_selected"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/recent_added_file_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main_menu_layout"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/simple_border"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:weightSum="100">

                        <com.jksol.filemanager.Widgets.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="90"
                            android:padding="5dp"
                            android:text="@string/recent_added_files"
                            android:textSize="16sp"
                            app:fontName="@string/font_montserrat_light" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/next" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recent_added_file_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none" />

                        <ProgressBar
                            android:id="@+id/recentfile_loader"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:indeterminate="true"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/noMediaLayout_recent_files"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:background="@drawable/ic_no_media" />

                            <com.jksol.filemanager.Widgets.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:text="@string/no_media_found"
                                android:textColor="@color/color_text_selected"
                                app:fontName="@string/font_montserrat_light" />
                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
